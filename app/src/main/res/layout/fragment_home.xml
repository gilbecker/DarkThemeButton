        android:text="...customize its colors"
        android:drawableEnd="@drawable/ic_baseline_arrow_upward_24"
        android:drawablePadding="2dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="30dp"
        android:layout_gravity="center_vertical"
        android:textColor="@color/iconsColor"
        app:layout_constraintTop_toBottomOf="@id/button"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.gilbecker.darktheme.DarkThemeButton
        android:id="@+id/fab"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="...and even set is as a Floating Button!"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
        android:drawablePadding="2dp"
        android:layout_marginEnd="14dp"
        android:textColor="@color/iconsColor"
        android:layout_gravity="center_vertical"
        app:layout_constraintTop_toTopOf="@id/fab"
        app:layout_constraintBottom_toBottomOf="@id/fab"
        app:layout_constraintEnd_toStartOf="@id/fab"/>

